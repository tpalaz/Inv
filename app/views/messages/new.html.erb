
<section id="Icontact">
<div class="container">
  <div class="row">
    <h1 class="header-title">Contact Us</h1>
    <hr>
    <div class="col-sm-12" id="parent">
    	<div class="col-sm-6">
                <%= image_tag ("https://maps.googleapis.com/maps/api/staticmap?center=Calgary, AB&zoom=14&size=350x300&key=AIzaSyD5h3VO3z8voFvJVuzPcdT6BGvIvEdcy3I") %>
    	</div>

    	<div class="col-sm-6">
<%= form_for @message do |message_form| %>
      <%= render 'shared/error_messages' %>

		        <div class="form-row">
				<div class="form-group col-md-5">
					<%= message_form.text_field :fname, placeholder: "First Name", :class => "form-control"%>
				</div>
				<div class="form-group col-md-7">

							<%= message_form.text_field :lname, placeholder: "Last Name", :class => "form-control"%>

		        </div>
		        </div>
		        <div class="form-group form_left">
				  <%= message_form.email_field :email, placeholder: "Email", :class => "form-control" %>
		        </div>
		    <div class="row">
		      <div class="form-group col-md-4">
			  
				  <%= message_form.phone_field :phone, placeholder: "Phone No.", :class => "form-control", :include_blank => true%> 
			</div>
				<%= message_form.check_box :phonecontact, :id =>  "inlineFormCheck", :label => "form-check-label" %>
			<label class="form-check-label" for="inlineFormCheck">
				Contact by phone
			</label>

		  </div>
		     

		      <div class="form-group">
              <%= message_form.text_area :content, placeholder: "Type your inquiry here", :rows => "5", :class => "form-control textarea-contact"%>

				</div>
			 
		      <br>
			<%= message_form.submit "Send", :class => "btn btn-primary"%>

		      </div>
	        <% end %>

    	</div>
    </div>
  </div>

  <div class="container second-portion">
	<div class="row">
	        <div class="col-xs-12 col-sm-6 col-lg-4">
		</div>
        <!-- Boxes de Acoes -->
    	<div class="col-xs-12 col-sm-6 col-lg-4">
			<div class="box">							
				<h1 class="text-center">Phone</h3>
					<p>+1 (587)-885-1664</p>
									<div class="space"></div>

					</div>
		</div>


        <div class="col-xs-12 col-sm-6 col-lg-4">
			<div class="box">							
						<h1 class="text-center">Email</h3>
						<p>info@investblock.capital</p>
				<div class="space"></div>
			</div> 
		</div>    
	    
	</div>
</div>
</div>